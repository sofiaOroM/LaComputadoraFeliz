<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>Servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CrearComponenteServlet</servlet-name>
        <servlet-class>ServletEnsamblaje.CrearComponenteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrearComponenteServlet</servlet-name>
        <url-pattern>/CrearComponenteServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ComponentesAgotadosServlet</servlet-name>
        <servlet-class>Servlet.Ensamblaje.ComponentesAgotadosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComponentesAgotadosServlet</servlet-name>
        <url-pattern>/ComponentesAgotadosServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ComponentesAPuntoDeAgotarseServlet</servlet-name>
        <servlet-class>Servlet.Ensamblaje.ComponentesAPuntoDeAgotarseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ComponentesAPuntoDeAgotarseServlet</servlet-name>
        <url-pattern>/ComponentesAPuntoDeAgotarseServlet</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ModificarComponentes</servlet-name>
        <servlet-class>Servlet.Ensamblaje.ModificarComponenteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ModificarComponenteServlet</servlet-name>
        <url-pattern>/ModificarComponenteServlet</url-pattern>
    </servlet-mapping>
</web-app>
